# Image Sense Configuration
# Configuration Priority Order:
# 1. Command line arguments (highest priority)
# 2. Environment variables in .env file
# 3. Default values in code (lowest priority)

#######################
# Image Processing
#######################
# Enable smart compression to reduce API costs and processing time (default: true)
COMPRESSION_ENABLED=true
# JPEG quality (1-100) for compressed images (default: 85)
COMPRESSION_QUALITY=85
# Maximum dimension in pixels for image scaling (default: 1024)
MAX_DIMENSION=1024

#######################
# Batch Processing
#######################
# Number of images to process in parallel (default: 50)
# Recommended range: 50-500 for optimal performance
DEFAULT_BATCH_SIZE=50
# Maximum allowed batch size (default: 3000)
# Gemini API limit is 3000 images per batch
MAX_BATCH_SIZE=3000
# Minimum batch size for parallel processing (default: 10)
MIN_BATCH_SIZE=10
# Enable automatic batch size optimization (default: true)
AUTO_OPTIMIZE_BATCH=true
# Maximum memory usage percentage before reducing batch size (default: 0.8)
MEMORY_THRESHOLD=0.8
# Number of images to process before saving checkpoint (default: 10)
CHECKPOINT_INTERVAL=10
# Maximum memory usage per batch in MB, 0 for unlimited (default: 1024)
MAX_BATCH_MEMORY=1024

#######################
# Error Handling
#######################
# Maximum number of retry attempts for failed operations (default: 3)
MAX_RETRIES=3
# Base delay between retries in seconds (default: 1.0)
RETRY_DELAY=1.0
# Maximum number of checkpoints to keep (default: 5)
MAX_CHECKPOINTS=5

#######################
# Output Settings
#######################
# Default output format: 'csv' or 'xml' (default: csv)
DEFAULT_OUTPUT_FORMAT=csv
# Directory for output files (default: output)
OUTPUT_DIRECTORY=output
# Save CSV output files (default: true)
SAVE_CSV_OUTPUT=true
# Save XML output files (default: true)
SAVE_XML_OUTPUT=true
# Append to existing CSV files (default: false)
AUTO_APPEND_CSV=false
# Enable performance statistics tracking (default: true)
TRACK_PERFORMANCE=true

#######################
# Model Settings
#######################
# Default AI model (default: gemini-2.0-flash-exp)
# Available options:
# - gemini-2.0-flash-exp: Latest experimental model (fastest)
# - gemini-1.5-flash: Production model (balanced)
# - gemini-1.5-pro: More detailed analysis (slower)
DEFAULT_MODEL=gemini-2.0-flash-exp

#######################
# File Handling
#######################
# Enable automatic file renaming (default: false)
RENAME_FILES=false
# Prefix for renamed files (default: empty)
FILE_PREFIX=
# Create duplicate files before modifying (default: false)
DUPLICATE_FILES=false
# Suffix for duplicate files (default: _modified)
DUPLICATE_SUFFIX=_modified

#######################
# Metadata Settings
#######################
# Create backup copies before modifying metadata (default: true)
BACKUP_METADATA=true
# Write analysis results to image EXIF data (default: true)
WRITE_EXIF=true

#######################
# Progress and Logging
#######################
# Show progress bars and statistics (default: true)
SHOW_PROGRESS=true
# Show real-time Gemini model responses (default: true)
VERBOSE_OUTPUT=true
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

#######################
# API Settings
#######################
# Google API key for Gemini Vision API (REQUIRED)
# Get it from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

#######################
# System Settings
#######################
# Path to ExifTool executable (default: resources/exiftool/exiftool)
EXIFTOOL_PATH=resources/exiftool/exiftool
# Maximum retries for failed API calls (default: 3)
MAX_RETRIES=3
# Timeout in seconds for API calls (default: 30)
API_TIMEOUT=30